{
    "app-id" : "org.gnome.baobab",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.36",
    "sdk" : "org.gnome.Sdk",
    "command" : "baobab",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host:ro",
        "--filesystem=~/.var/app:ro",
        "--talk-name=org.gtk.vfs.*",
        "--system-talk-name=org.freedesktop.hostname1",
        "--share=network"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "*.la",
        "*.a",
        "/lib/girepository-1.0",
        "/share/doc",
        "/share/gir-1.0"
    ],
    "modules" : [
        {
            "name" : "baobab",
            "buildsystem" : "meson",
            "builddir" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/baobab.git",
		    "branch" : "gnome-3-34",
		    "commit" : "cce783d810204c0f1a753c9b61cf72701f22e0ef"
                },
		{
		    "type" : "patch",
		    "path" : "patches/org.gnome.baobab.appdata.xml.patch",
		    "use-git" : true
		}
            ]
        }
    ]
}

